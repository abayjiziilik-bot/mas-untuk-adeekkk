  <script>
    /* =========================
       GANTI INI SESUAI KEBUTUHAN:
       - PHOTO_1_URL / PHOTO_2_URL / PHOTO_3_URL -> ganti dengan link gambar (upload ke imgbb/ibb)
       - YOUTUBE_VIDEO_ID -> id video YouTube "Kesayanganku - Al Ghazali" (jika perlu)
    ============================*/
    const PHOTO_1_URL = "https://i.ibb.co/2g6tTqM/sample1.jpg"; // GANTI dengan foto ucapan 1
    const PHOTO_2_URL = "https://i.ibb.co/2g6tTqM/sample2.jpg"; // GANTI dengan foto ucapan 2
    const PHOTO_3_URL = "https://i.ibb.co/2g6tTqM/sample3.jpg"; // GANTI dengan foto ucapan 3
    const YOUTUBE_VIDEO_ID = "mIjK3hZl5yA"; // GANTI jika perlu
    /* ========================= */

    const UCAPAN = {
      1: {
        title: "Ucapan 1 â€” Ulang Tahun Lucu ğŸ‚",
        text: `Hai Adeekkk ğŸ¥ºğŸ’\nHari ini hari spesial banget! Soalnya dunia lagi ulang tahun... eh, bukan deng, yang ulang tahun kamu ğŸ˜†\n\nSelamat ulang tahun yaa, bocil manis kesayangan Mas ğŸ’•\nSemoga nambah umur tapi jangan nambah galak ğŸ˜\nNambah cantik boleh, nambah manja juga boleh â€” asal manjanya ke Mas aja ya ğŸ¤­\n\nPokoknya hari ini kamu harus senyum terus, karena senyum kamu tuh udah kayak â€œcharger hatiâ€ buat Mas âš¡ğŸ’˜`,
        photo: PHOTO_1_URL
      },
      2: {
        title: "Ucapan 2 â€” Doa Kesehatan & Gombal ğŸ’",
        text: `Adeekkk ğŸ¥ºğŸ’\nMas cuma punya satu doa besar buat kamuâ€¦\nsemoga kamu selalu sehat, selalu bahagia, dan semua langkah kamu ke depan dilancarkan sama Tuhan ğŸ’«\n\nSemoga setiap harapan kamu pelan-pelan jadi kenyataan,\ndan setiap mimpi kamu selalu ada Mas di dalamnya ğŸ˜š\n\nKamu tuh kayak Wi-Fi, Adeekkk â€” kalau kamu jauh, hidup Mas langsung 'no signal' ğŸ˜­ğŸ“¶\n\nTetap semangat ya sayang, masa depan kamu bakal seindah senyum kamu hari ini ğŸ’âœ¨`,
        photo: PHOTO_2_URL
      },
      3: {
        title: "Ucapan 3 â€” Permohonan Maaf ğŸ¥º",
        text: `Adeekkk ğŸ¥ºğŸ’\nDi balik semua tawa dan candaan Mas, kadang Mas sadarâ€¦\nMas sering bikin kamu kesel, kadang bikin kamu cape, bahkan pernah bikin kamu sedih ğŸ˜”\n\nMas minta maaf ya, dari hati yang paling dalam ğŸ’”\nMas nggak sempurna, tapi Mas selalu belajar buat jadi lebih baik â€” buat kamu.\n\nMakasih udah sabar sama Mas sejauh ini, dan kalau bolehâ€¦ izinin Mas buat terus nemenin kamu ke depan ğŸ¥ºğŸ’–\n\nKarena tanpa kamu, Mas kayak langit tanpa bintang â€” tetap ada, tapi kosong ğŸŒŒ`,
        photo: PHOTO_3_URL
      }
    };

    // state
    let opened = {1:false,2:false,3:false};
    let musicPlaying = false;
    let ytIframe = null;

    const playBtn = document.getElementById('playBtn');
    const playInfo = document.getElementById('playInfo');
    const afterMusic = document.getElementById('afterMusic');
    const giftContent = document.getElementById('giftContent');
    const btn1 = document.getElementById('btn1');
    const btn2 = document.getElementById('btn2');
    const btn3 = document.getElementById('btn3');
    const ucapanArea = document.getElementById('ucapanArea');
    const ucapanBox = document.getElementById('ucapanBox');
    const statusRow = {1: document.getElementById('stat1'), 2: document.getElementById('stat2'), 3: document.getElementById('stat3')};
    const overlay = document.getElementById('overlay');
    const finalText = document.getElementById('finalText');
    const closeOverlay = document.getElementById('closeOverlay');
    const panda = document.getElementById('panda');

    function updateStatus(){
      for(let i=1;i<=3;i++){
        statusRow[i].textContent = `${i}: ${opened[i] ? 'Sudah' : 'Belum'}`;
        const btn = document.getElementById('btn'+i);
        if(opened[i]) btn.classList.add('opened');
      }
      const allOpened = opened[1] && opened[2] && opened[3];
      if(allOpened && !document.getElementById('doneMarker')){
        const done = document.createElement('div');
        done.id = 'doneMarker';
        done.style.marginTop = '14px';
        done.style.fontWeight = '700';
        done.textContent = 'Selesai â€” kamu sudah membuka semua ucapan ğŸ‰';
        giftContent.appendChild(done);

        const babaiBtn = document.createElement('button');
        babaiBtn.className='btn';
        babaiBtn.style.marginLeft='10px';
        babaiBtn.textContent = 'Babaiii ğŸ’•';
        babaiBtn.onclick = triggerBabai;
        done.appendChild(babaiBtn);
      }
    }

    function injectYouTube(){
      const holder = document.getElementById('ytHolder');
      if(ytIframe) return;
      const src = `https://www.youtube.com/embed/${YOUTUBE_VIDEO_ID}?autoplay=1&loop=1&playlist=${YOUTUBE_VIDEO_ID}&rel=0&modestbranding=1`;
      ytIframe = document.createElement('iframe');
      ytIframe.width='0'; ytIframe.height='0';
      ytIframe.src = src;
      ytIframe.frameBorder='0';
      ytIframe.allow = 'autoplay; encrypted-media';
      holder.appendChild(ytIframe);
      musicPlaying = true;
      // show "Mulai Baca Ucapan" button
      playInfo.style.display = 'inline-block';
      // little panda jiggle
      panda.classList.add('jiggle');
      setTimeout(()=> panda.classList.remove('jiggle'), 800);
    }

    playBtn.addEventListener('click', ()=>{
      injectYouTube();
      // give small feedback
      playBtn.textContent = 'Lagu dinyalakan ğŸ¶';
      playBtn.disabled = true;
      playBtn.style.opacity = 0.8;
      // show hint
      playInfo.textContent = 'Mulai Baca Ucapan ğŸ’Œ';
    });

    playInfo.addEventListener('click', ()=>{
      // show gift content
      giftContent.style.display = 'block';
      setTimeout(()=> giftContent.classList.add('show'), 40);
      // scroll to it
      giftContent.scrollIntoView({behavior:'smooth'});
    });

    function showUcapan(id){
      const data = UCAPAN[id];
      ucapanBox.innerHTML = '';
      const t = document.createElement('h3');
      t.style.color = 'var(--accent)';
      t.textContent = data.title;
      const img = document.createElement('img');
      img.className='ucap-photo';
      img.src = data.photo;
      img.alt = 'Foto ucapan '+id;
      const txt = document.createElement('pre');
      txt.className = 'ucap-text';
      txt.textContent = data.text;
      const back = document.createElement('button');
      back.className='btn ghost back-btn';
      back.textContent = 'Kembali ğŸ”™';
      back.onclick = ()=> {
        ucapanArea.style.display='none';
        giftContent.style.display='block';
        giftContent.scrollIntoView({behavior:'smooth'});
      };

      ucapanBox.appendChild(t);
      ucapanBox.appendChild(img);
      ucapanBox.appendChild(txt);
      ucapanBox.appendChild(back);

      opened[id] = true;
      updateStatus();

      giftContent.style.display='none';
      ucapanArea.style.display='block';
      ucapanArea.scrollIntoView({behavior:'smooth'});
    }

    btn1.addEventListener('click', ()=> showUcapan(1));
    btn2.addEventListener('click', ()=> showUcapan(2));
    btn3.addEventListener('click', ()=> showUcapan(3));

    // Babai overlay and hearts
    function triggerBabai(){
      overlay.classList.add('show');
      // create hearts
      for(let i=0;i<20;i++) createHeart(i);
      // small panda bounce
      panda.classList.add('jiggle');
      setTimeout(()=> panda.classList.remove('jiggle'), 900);
    }

    function createHeart(i){
      const heart = document.createElement('div');
      heart.className='heart';
      heart.textContent='ğŸ’–';
      const left = Math.random() * 90 + 5; // vw %
      const delay = Math.random() * 1.2;
      const dur = 5 + Math.random() * 5;
      heart.style.left = left + 'vw';
      heart.style.animationDuration = dur + 's';
      heart.style.animationDelay = delay + 's';
      heart.style.fontSize = (14 + Math.random()*26) + 'px';
      document.body.appendChild(heart);
      setTimeout(()=> heart.remove(), (dur+delay)*1000 + 1200);
    }

    closeOverlay.addEventListener('click', ()=>{
      overlay.classList.remove('show');
      document.querySelectorAll('.heart').forEach(h=>h.remove());
    });

    // initial
    updateStatus();
  </script>
</body>
