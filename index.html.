  <!-- Hidden: YouTube iframe will be injected when play clicked -->
  <div id="ytHolder" style="display:none"></div>

  <!-- Overlay Babai -->
  <div class="overlay" id="overlay">
    <div class="overlay-card">
      <h2 style="color:var(--accent); margin-top:0">Untuk Adeekkk ğŸ¥ºğŸ’</h2>
      <p class="final-message" id="finalText">
        Terima kasih udah jadi bagian paling indah di hidup Mas.
        Jangan lupa, Mas selalu sayang sama Adeekkk ğŸ¥ºğŸ’–
